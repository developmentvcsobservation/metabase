// https://aka.ms/vscode-remote/devcontainer.json
{
	"name": "Node.js",
	"build": {
		"dockerfile": "Dockerfile"
	},

	// Add the IDs of extensions you want installed when the container is created.
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "betterthantomorrow.calva",
        "styled-components.vscode-styled-components",
        "firsttris.vscode-jest-runner",
        "EditorConfig.EditorConfig",
        "streetsidesoftware.code-spell-checker",
        "limejuly.vscode-yaml-block-highlight",
        "andrewleedham.vscode-css-modules"
      ]
    }
  },

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [3000],

	// Comment out the next line to run as root instead.
	"remoteUser": "vscode",

	"runArgs": ["--network=metabase-dev"],

	"postStartCommand": "git config --global --add safe.directory /workspaces/metabase"
}
